@page
@model RecSys.Pages_CourseLecturers.CreateModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Course-Lecturer Relationship";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="form-container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Lecturer Dropdown -->
                <div class="form-group">
                    <label asp-for="CourseLecturer.SvId" class="control-label">Lecturer</label>
                    <select asp-for="CourseLecturer.SvId" class="form-control"
                            asp-items="ViewBag.SvId" required>
                        <option value="">-- Select Lecturer --</option>
                    </select>
                    <span asp-validation-for="CourseLecturer.SvId" class="text-danger"></span>
                </div>

                <!-- Course Dropdown -->
                <div class="form-group">
                    <label asp-for="CourseLecturer.CourseId" class="control-label">Course</label>
                    <select asp-for="CourseLecturer.CourseId" class="form-control"
                            asp-items="ViewBag.CourseId" required>
                        <option value="">-- Select Course --</option>
                    </select>
                    <span asp-validation-for="CourseLecturer.CourseId" class="text-danger"></span>
                </div>

                <!-- Year Input -->
                <div class="form-group">
                    <label asp-for="CourseLecturer.Year" class="control-label">Year</label>
                    <input asp-for="CourseLecturer.Year" class="form-control" min="1" required />
                    <span asp-validation-for="CourseLecturer.Year" class="text-danger"></span>
                </div>

                <!-- Semester Input -->
                <div class="form-group">
                    <label asp-for="CourseLecturer.Sem" class="control-label">Semester</label>
                    <input asp-for="CourseLecturer.Sem" class="form-control" min="1" max="3" required />
                    <span asp-validation-for="CourseLecturer.Sem" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Add
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}