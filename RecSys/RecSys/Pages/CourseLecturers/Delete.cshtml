@page "{svId}/{courseId}/{year}/{sem}"
@model RecSys.Pages_CourseLecturers.DeleteModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Course-Lecturer Relationship";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="form-container">
    <h3 class="text-danger">Are you sure you want to delete this? This action cannot be undone.</h3>
    <div>
        <h4>Course-Lecturer Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Course
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseLecturer.Course.CourseName)
            </dd>
            <dt class="col-sm-2">
                Lecturer
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseLecturer.Sv.SvName)
            </dd>
            <dt class="col-sm-2">
                Year
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseLecturer.Year)
            </dd>
            <dt class="col-sm-2">
                Semester
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CourseLecturer.Sem)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="CourseLecturer.SvId" />
            <input type="hidden" asp-for="CourseLecturer.CourseId" />
            <input type="hidden" asp-for="CourseLecturer.Year" />
            <input type="hidden" asp-for="CourseLecturer.Sem" />
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>