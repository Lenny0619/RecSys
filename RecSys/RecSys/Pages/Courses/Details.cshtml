@page
@model RecSys.Pages_Courses.DetailsModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Course Details";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="form-container">
    <div>
        <h4>Course Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Course Id
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Course.CourseId)
            </dd>
            <dt class="col-sm-2">
                Course Code
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Course.CourseCode)
            </dd>
            <dt class="col-sm-2">
                Course Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Course.CourseName)
            </dd>
            <dt class="col-sm-2">
                Abbreviation
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Course.Abbreviations)
            </dd>
        </dl>
    </div>
    <div class="mt-3">
        <a asp-page="./Edit" asp-route-id="@Model.Course?.CourseId" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>