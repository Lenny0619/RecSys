@page
@model RecSys.Pages_Lecturers.CreateModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add New Lecturer";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="form-container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Lecturer.SvName" class="control-label"></label>
                    <input asp-for="Lecturer.SvName" class="form-control" />
                    <span asp-validation-for="Lecturer.SvName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lecturer.SvExpertise" class="control-label"></label>
                    <input asp-for="Lecturer.SvExpertise" class="form-control" />
                    <span asp-validation-for="Lecturer.SvExpertise" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lecturer.Eligibility" class="control-label"></label>
                    <select asp-for="Lecturer.Eligibility" class="form-control">
                        <option value="">-- Select Eligibility --</option>
                        <option value="1">Eligible to supervise(1)</option>
                        <option value="0">Not Eligible to supervise(0)</option>
                    </select>
                    <span asp-validation-for="Lecturer.Eligibility" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lecturer.Email" class="control-label"></label>
                    <input asp-for="Lecturer.Email" class="form-control" />
                    <span asp-validation-for="Lecturer.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-group">
                        <label for="ImageUpload">Upload Image</label>
                        <input type="file" name="ImageUpload" class="form-control" />
                    </div>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Add
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}