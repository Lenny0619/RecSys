@page
@model RecSys.Pages_Lecturers.DeleteModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Lecturer";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="form-container">
    <h3 class="text-danger">Are you sure you want to delete this? This action cannot be undone.</h3>
    <div>
        <h4>Lecturer Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lecturer.SvName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lecturer.SvName)
            </dd>
            <!-- Repeat for other fields -->
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lecturer.SvExpertise)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lecturer.SvExpertise)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lecturer.Eligibility)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lecturer.Eligibility)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lecturer.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lecturer.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Lecturer.ImagePath)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Lecturer.ImagePath)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Lecturer.SvId" />
            <div class="form-group mt-3">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-page="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>
</div>