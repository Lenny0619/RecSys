@page
@model RecSys.Pages_PastStudentsChoices.EditModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Past Student Choice";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="form-container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PastStudentsChoice.StudentId" />

                <div class="form-group">
                    <label asp-for="PastStudentsChoice.SvId" class="control-label">Lecturer ID</label>
                    <input asp-for="PastStudentsChoice.SvId" class="form-control" />
                    <span asp-validation-for="PastStudentsChoice.SvId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PastStudentsChoice.ProjectFocus" class="control-label">Project Focus</label>
                    <input asp-for="PastStudentsChoice.ProjectFocus" class="form-control" />
                    <span asp-validation-for="PastStudentsChoice.ProjectFocus" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PastStudentsChoice.Rating" class="control-label">Rating (1-5)</label>
                    <input asp-for="PastStudentsChoice.Rating" class="form-control" type="number" min="1" max="5" />
                    <span asp-validation-for="PastStudentsChoice.Rating" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}