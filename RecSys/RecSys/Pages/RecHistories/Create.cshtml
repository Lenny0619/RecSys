@page
@model RecSys.Pages_RecHistories.CreateModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Recommendation History";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="form-container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RecHistory.AnonymousId" class="control-label">Anonymous ID</label>
                    <input asp-for="RecHistory.AnonymousId" class="form-control" />
                    <span asp-validation-for="RecHistory.AnonymousId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecHistory.PreferredCourses" class="control-label">Preferred Courses</label>
                    <input asp-for="RecHistory.PreferredCourses" class="form-control" />
                    <span asp-validation-for="RecHistory.PreferredCourses" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecHistory.ProjectFocus" class="control-label">Project Focus</label>
                    <input asp-for="RecHistory.ProjectFocus" class="form-control" />
                    <span asp-validation-for="RecHistory.ProjectFocus" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}