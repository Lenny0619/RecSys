@page
@model RecSys.Pages_RecHistories.IndexModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Recommendation Histories";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="table-container">
    <table class="table table-layout-fixed">
        <thead>
            <tr>
                <th style="width: 10%">History ID</th>
                <th style="width: 15%">Anonymous ID</th>
                <th style="width: 25%">Preferred Courses</th>
                <th style="width: 20%">Project Focus</th>
                <th style="width: 20%">Submitted At</th>
                <th style="width: 10%">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RecHistory)
            {
                <tr>
                    <td class="text-truncate">@Html.DisplayFor(modelItem => item.HistoryId)</td>
                    <td class="text-truncate">@Html.DisplayFor(modelItem => item.AnonymousId)</td>
                    <td class="text-truncate">@Html.DisplayFor(modelItem => item.PreferredCourses)</td>
                    <td class="text-truncate">@Html.DisplayFor(modelItem => item.ProjectFocus)</td>
                    <td class="text-truncate">@Html.DisplayFor(modelItem => item.SubmittedAt)</td>
                    <td>
                        <div class="d-flex gap-1">
                            <a asp-page="./Details" asp-route-id="@item.HistoryId" class="btn btn-sm btn-info">
                                <i class="fas fa-info-circle"></i>
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.HistoryId" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table-layout-fixed {
        table-layout: fixed;
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .table-container {
        overflow-x: auto;
    }
</style>