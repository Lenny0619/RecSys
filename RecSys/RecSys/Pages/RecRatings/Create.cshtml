@page
@model RecSys.Pages_RecRatings.CreateModel
@{
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Recommendation Rating";
}

<div class="page-header">
    <h2>@ViewData["Title"]</h2>
</div>

<div class="form-container">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RecRating.HistoryId" class="control-label">History ID</label>
                    <select asp-for="RecRating.HistoryId" class="form-control" asp-items="ViewBag.HistoryId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="RecRating.RecommendedLecturerId" class="control-label">Lecturer ID</label>
                    <input asp-for="RecRating.RecommendedLecturerId" class="form-control" />
                    <span asp-validation-for="RecRating.RecommendedLecturerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RecRating.SubmittedRating" class="control-label">Rating (1-5)</label>
                    <input asp-for="RecRating.SubmittedRating" class="form-control" type="number" min="1" max="5" />
                    <span asp-validation-for="RecRating.SubmittedRating" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}